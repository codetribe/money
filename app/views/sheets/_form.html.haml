= form_for @sheet do |f|
  - if @sheet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sheet.errors.count, "error")} prohibited this sheet from being saved:"
      %ul
        - @sheet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :sheet_id
    = f.text_field :sheet_id
  .actions
    = f.submit 'Save', class: "btn"
